<article class="container_calendar">
    <div class="header_calendar">
        <h1 id="text_day">00</h1>
        <h5 id="text_month">Null</h5>
    </div>
    <div class="body_calendar">
        <div class="container_change_month">

            <div>
                <span id="text_month_02">Null</span>
                <span id="text_year">0000</span>
            </div>

        </div>
        <div class="container_weedays"> 
            <span class="week_days_item">DOM</span>
            <span class="week_days_item">LUN</span>
            <span class="week_days_item">MAR</span>
            <span class="week_days_item">MÍE</span>
            <span class="week_days_item">JUE</span>
            <span class="week_days_item">VIE</span>
            <span class="week_days_item">SÁB</span>
        </div>
        <div class="container_days">
            <span class="week_days_item item_day"></span>
        </div>
    </div>
</article>
<div class="" id="habit_tracker">
    <div id="item_list">

        <div id="agregar">
            <h3>Agregar actividad</h3>
            <form method="post" action="/nueva_actividad" id="cont_agregar">
                <div id="cont_inp">
                    <i class="fa-light fa-plus"></i>
                    <input id="info_act" name="info_act" type="text"
                        placeholder="Agregar nueva actividad" required maxlength="100">
                </div>

                <input id="fecha_act" name="fecha_act" type="date" required>
                <button id="btn_enviar_act" type="submit">Enviar</button>
            </form>
        </div>
        <div id="cont_list">
            <h3>Tu actividad de hoy</h3>
            <ul id="list">
                <% results.forEach(actividad=> { %>
                    <li class="item">
                        <% if(actividad.MarcadorCumplido=="1" ){%>
                            <input type="checkbox" name="check" data-id="<%- actividad.ID_act %>" class="item_act"
                                checked>
                            <span class="text_item tachado"><%- actividad.Objetivos %></span>
                            <%} else {%>
                                <input type="checkbox" name="check" data-id="<%- actividad.ID_act %>" class="item_act">
                                <span class="text_item "><%- actividad.Objetivos %></span>
                                <%}%>
                    </li>
                    <% }) %>
            </ul>
        </div>
    </div>
</div>
