<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <title>Mental Strong</title>
    <link rel="stylesheet" href="css/estilo.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="shortcut icon" href="../public/resources/mental-strong.ico" type="image/x-icon">
</head>

<body>

    <main>
        <section id="ventana_prin">

            <aside id="menu_lateral">
                <%-include('menu.ejs')%>
            </aside>
            <section id="main_recetas">

                <div id="cont_info_prin">
                    <% if(user_foto_perfil){%>
                        <img src="<%-user_foto_perfil%>">
                        <%} else {%>
                            <img src="./resources/img_us/sin-foto.png">
                            <%}%>
                                <h3 class="nombre_us"><%-user_name%></h3>
                </div>
                <section class="cont_rec" id="cont_us_editar">

                    <div id="cont_main">
                        <div class="cont_datos">
                                <input type="text" placeholder="Detalles">
                            <h4>Detalles de usuario</h4>
                            <div class="datos_user">
                                <input type="text" placeholder="Correo">
                                <h3>Dirección de correo</h3>
                                <p><%-user_email%></p>
                            </div>
                            <div class="datos_user">
                                <input type="text" placeholder="Nombre">
                                <h3>Nombre</h3>
                                <p><%-user_nombre_regis%></p>
                            </div>
                            <div class="datos_user">
                                <input type="text" placeholder="Apellido">
                                <h3>Apellido</h3>
                                <p><%-user_apellido_regis%></p>
                            </div>
                            <div class="datos_user">
                                <input type="text" placeholder="DNI">
                                <h3>Documento Nacional de Identidad</h3>
                                <p><%-user_dni%></p>
                            </div>
                            <div class="datos_user">
                                <input type="text" placeholder="Genero">
                                <h3>Genero</h3>

                                <% if(user_genero=="M" ){%>
                                    <p>Masculino</p>
                                    <%} else {%>
                                        <p>Femenino</p>
                                        <%}%>
                            </div>
                            <div class="datos_user">
                                <input type="text" placeholder="Altura">
                                <h3>Altura</h3>
                                <p><%-user_altura%> cm</p>
                            </div>
                            <div class="datos_user">
                                <input type="text" placeholder="Peso">
                                <h3>Peso</h3>
                                <p><%-user_peso%> Kg</p>
                            </div>
                        </div>

                        <div class="cont_datos">
                            <input type="text" placeholder="Detalles nutrición">
                            <h4>Detalles de nutricion</h4>
                            <div class="datos_user">
                                <input type="text" placeholder="Tipo de dieta">
                                <h3>Tipo de dieta</h3>
                                <p><%-user_dieta%></p>
                            </div>
                            <div class="datos_user">
                                <input type="text" placeholder="Objetivo nutricional">
                                <h3>Objetivo nutricional</h3>
                                <p><%-user_obj_nut%></p>
                            </div>
                        </div>

                        <div class="cont_datos">
                            <input type="text" placeholder="Detalles deporte">
                            <h4>Detalles de deporte</h4>
                            <div class="datos_user">
                                <input type="text" placeholder="TIpo deporte">
                                <h3>Tipo de deporte</h3>
                                <p><%-user_deporte%></p>
                            </div>
                            <div class="datos_user">
                                <input type="text" placeholder="Objetivo deportivo">
                                <h3>Objetivo deportivo</h3>
                                <p><%-user_obj_dep%></p>
                            </div>
                            <div class="datos_user">
                                <input type="text" placeholder="Frecuencia">
                                <h3>Frecuencia de la actividad</h3>
                                <p><%-user_frecuencia%> ( Frecuencia / Dias de la semana )</p>
                            </div>
                            <div class="datos_user">
                                <input type="text" placeholder="Intensidad">
                                <h3>Intensidad de la actividad</h3>
                                <p><%-user_intensidad%> </p>
                            </div>
                        </div>
                    </div>
                </section>
            </section>
    </main>
</body>

</html>